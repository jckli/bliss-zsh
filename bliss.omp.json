{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "type": "text",
          "style": "plain",
          "foreground": "#a463f7",
          "properties": {
            "text": "[{{ .UserName }}]",
            "prefix": ""
          }
        },
        {
          "type": "path",
          "style": "plain",
          "foreground": "#f3b2fa",
          "properties": {
            "style": "full",
            "truncate_to_repo": false,
            "prefix": ""
          }
        },
        {
          "type": "git",
          "style": "plain",
          "foreground": "#00FFFF",
          "properties": {
            "prefix": "",
            "branch_icon": "",
            "fetch_status": true,
            "template": "({{ .HEAD }})"
          }
        },
        {
          "type": "git",
          "style": "plain",
          "foreground": "#FFFF00",
          "properties": {
            "prefix": "",
            "branch_icon": "",
            "fetch_status": true,
            "template": "{{ if .Working.Changed }}x{{ end }}"
          }
        },
        {
          "type": "git",
          "style": "plain",
          "foreground": "#00FF00",
          "properties": {
            "prefix": "",
            "branch_icon": "",
            "fetch_status": true,
            "template": "{{ if .Staging.Changed }}{{ end }}"
          }
        },
        {
          "type": "git",
          "style": "plain",
          "foreground": "#00FF00",
          "properties": {
            "prefix": "",
            "branch_icon": "",
            "fetch_status": true,
            "template": "{{ if and (not .Working.Changed) (not .Staging.Changed) }}✓{{ end }}"
          }
        },
        {
          "type": "text",
          "style": "plain",
          "foreground": "#FFFFFF",
          "properties": {
            "prefix": "",
            "text": "$"
          }
        }
      ]
    }
  ]
}
